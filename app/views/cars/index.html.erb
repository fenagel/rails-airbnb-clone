<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
 <div class="container1">
  <div class="row">
    <% @cars.each do |car| %>
      <div class="col-4 pb-3">
        <div class="card" style="width: 18rem;">
          <div class="card-img-top">
            <% if car.photo.attached? %>
              <%= cl_image_tag car.photo.key, height: 300, width: 400, crop: :fit %>
            <% end %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><p>My name is: <%= car.name.upcase %></p></h5>
            <p class="card-text"> I am a <%= car.brand %></p>
            <p> Model: <%= car.model %></p>
            <p> Location: <%= car.location %></p>
            <%= link_to "Rent me!", car_path(car) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

